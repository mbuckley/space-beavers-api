{
  "compilerOptions": {
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.core",
      "es2015.promise",
      "es2016.array.include"
    ],
    "noImplicitAny": true,
    "sourceMap": true,
    "target": "es5",
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "compileOnSave": false
  },
  "include": [
    "functions/**/*"
  ]
}
